#include "headers/help.h"

char *about(char *strAbout){
	// char *keyval[];
	char *mask="\x1b[%iG%s:\x1b[%iG%s%s";
	char *kv="                                 ";
	char *aAb[6]={kv,kv,kv,kv,kv,kv};

	printf(mask,0  ,"VERSION" ,12 ,VERSION,"");
	printf(mask,42 ,"DATE   " ,54 ,DATE   ,"\n");
	printf(mask,0  ,"GIT    " ,12 ,GITHUB,"");
	printf(mask,42 ,"REPO   " ,54 ,REPO   ,"\n");
	printf(mask,0  ,"AUTHORS" ,12 ,AUTHOR,"");
	printf(mask,42 ,"LICENSE" ,54 ,LICENSE   ,"\n");
	sprintf(strAbout,"%s%s%s%s%s%s",aAb[0],aAb[1],aAb[2],aAb[3],aAb[4],aAb[5]);
	// printf("%i",(int) strlen(strAbout));
	return strAbout;
}

char *help(char *strInfo,char *exeName){
	strHelp=HELP;
	sprintf(strInfo,strHelp,exeName);
	return strInfo;
}
char *use(char *strInfo,char *exeName){
	strUse=USE;
	sprintf(strInfo,strUse,exeName);
	return strInfo;
}
void info(char exeName){
	UI32 lnBHelp;
	UI32 lnBUse;

	char bufHelp[lnBHelp];
	char bufUse[lnBUse];
	lnBUse=strlen(strUse)+strlen(&exeName)+1;
	lnBHelp=strlen(strHelp)+strlen(&exeName)+1;

	char bufAb[100];
	if (STATUS[31]){
		printf("\n%s\n","tmp");
	} else if(STATUS[30]){
		printf("\n%s\n",help(bufHelp,&exeName));
	} else if (STATUS[29]) {
		printf("\n%s\n",use(bufUse,&exeName));
	}
}
